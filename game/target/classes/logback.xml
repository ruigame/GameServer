        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="asyncCrossAppender"  class="com.game.log.logback.AsyncDailyFileAppender">
        <file>${sysLog.dir}/cross.log</file>
        <encoder>
            <pattern>%level %d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n </pattern>
